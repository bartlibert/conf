interactive(
    "copy-current-url",
    "Copy the current buffer's URL to the clipboard",
    function(I) {
        var text = I.window.buffers.current.document.location.href;
        writeToClipboard(text);
        I.window.minibuffer.message("Copied: " + text);
    }
);

