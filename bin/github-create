#!/usr/bin/env perl
use strict;
use warnings;
use Net::GitHub::V2;

@ARGV == 2 || @ARGV == 3 or die "usage: $0 name description [url]";
my ($name, $description, $url) = splice @ARGV, 0, 3;

open my $github, '<', '~/.github' or die "couldn't get login information";
my $user  = <$github>;
chomp $user;
my $token = <$github>;
chomp $token;

my $github = Net::GitHub::V2->new(
    owner => $user,
    repo  => 'conf', # bleh
    login => $user,
    token => $token,
);

$github->repos->create($name, $description, $url || '', 1); # 1 = public
