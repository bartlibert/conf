#!/bin/bash

base=${1/.fig/}

(
cat << EOF
\documentclass{article}
\usepackage{epsfig}
\usepackage{color}
\setlength{\textwidth}{100cm}
\setlength{\textheight}{100cm}
\begin{document}
\pagestyle{empty}
\input{$base.pstex_t}
\end{document}
EOF
) > $base.tex

latex $base.tex
dvips -E $base.dvi -o $base.eps
