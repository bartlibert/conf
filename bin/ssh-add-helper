#!/usr/bin/env perl
use strict;
use warnings;
use IO::Pty::Easy;

my $hostname = `hostname`;
open STDIN, '<', '/dev/tty';
my $pass = `pwsafe -pE ssh.$hostname`;
my $pty = IO::Pty::Easy->new;
$pty->spawn("ssh-add -t 1800 $ARGV[0]");
$pty->read;
$pty->write($pass . "\n");
while (1) {
    last if $pty->read =~ 'Identity added';
}
