#!/bin/bash
mount /mnt/camera || exit
fold=`date +%Y%m%d%H%M`
to_dir=~/media/images/photos/unsorted/$fold
from_dir=/mnt/camera/dcim/100olymp
numpictures=0
mkdir $to_dir
for picture in $from_dir/*;do
cp $picture $to_dir/
(( numpictures += 1 ))
done
chmod 644 $to_dir/*
echo "$numpictures images copied"
umount /mnt/camera
