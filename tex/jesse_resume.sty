\newenvironment{resclasscol}{
\begin{minipage}[t]{3.25in}
\begin{tabular*}{3in}[t]{l@{\hspace{0.2in}}l@{\extracolsep{\fill}}r}
}{
\end{tabular*}
\end{minipage}
}
% >>>
% \resclass <<<
\newcommand{\resclass}[3]{
    \textbf{#1}: & #2 & \textit{#3}\\
}
