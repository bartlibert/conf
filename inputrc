# use up and down to search in history
"\e[A": history-search-backward
"\e[B": history-search-forward

# completion things
set match-hidden-files off
set visible-stats on
"\e[Z": menu-complete

# set up vi mode
set editing-mode vi
set keymap vi

")": beginning-of-line

# my shell should never use the bell
set bell-style none
